{
  "editor.tabSize": 2,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.bracketPairColorization.enabled": false,
  "editor.cursorSurroundingLines": 4,
  "editor.dragAndDrop": false,
  "editor.guides.bracketPairs": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": false,
  "editor.wordBasedSuggestionsMode": "allDocuments",
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "deepIndent",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.fontAliasing": "auto",
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "always",
  "files.autoSaveDelay": 500,
  "files.exclude": {
    "**/.git": true,
    ".vscode": true,
    ".bundle": true,
    // ".*": true,
    // "*.ru": true,
    // "Dockerfile": true,
    // "Gem*": true,
    "install-packages": true,
    "main.rb": true,
    // "README.md": true,
    // "app.rb": true,
    // "environment.rb": true,
    // "bin/": true,
    // "spec/": true,
    "examples.txt": true,
    "tmp/": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "screencastMode.onlyKeyboardShortcuts": true,
  "screencastMode.verticalOffset": 10,
  "explorer.compactFolders": false,
  "explorer.incrementalNaming": "smart",
  "html.format.endWithNewline": true,
  "html.format.preserveNewLines": true,
  "html.format.templating": true,
  "terminal.integrated.altClickMovesCursor": true,
  "terminal.integrated.defaultProfile.linux": "bash",
  "vscode-erb-beautify.keepBlankLines": 1,
  "ruby.intellisense": false,
  "gitpod.openInStable.neverPrompt": true,
  "gitlens.showWelcomeOnInstall": false,
  "gitlens.currentLine.enabled": false,
  "redhat.telemetry.enabled": false,
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "editor.hover.enabled": false,
  "editor.hover.sticky": false,
  "editor.hover.hidingDelay": 0,
  "editor.hover.delay": 0,
  "workbench.hover.delay": 0,
  "workbench.sash.hoverDelay": 0,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.snippetSuggestions": "bottom"
}
